name="kotlin"
aliases=("kotlin" "kt")
requires=("java")

version(){
	kotlinc -version 2>&1 | grep kotlin | grep -Po '\d+.\d+.\d+'
}
install(){
	wget https://github.com/JetBrains/kotlin/releases/download/v1.4.10/kotlin-compiler-1.4.10.zip
	unzip kotlin-compiler-1.4.10.zip
}
pre_uninstall(){}
post_uninstall(){}
path(){
	echo "$LBIN/kotlinc/bin"
}
compile(){
	cp code.code code.kt
	kotlinc code.kt -include-runtime -d code.jar
}
run(){
	xargs -a args.args -d '\n' java -jar code.jar < stdin.stdin
}