name="crystal"
aliases=("crystal" "cr")
requires=()

version(){
	crystal -v | grep -Po '\d+.\d+.\d+'
}
install(){
	wget https://github.com/crystal-lang/crystal/releases/download/0.35.1/crystal-0.35.1-1-linux-x86_64.tar.gz
	tar -xzf crystal-0.35.1-1-linux-x86_64.tar.gz
}
pre_uninstall(){}
post_uninstall(){}
path(){
	echo "$LBIN/crystal-0.35.1-1/bin"
}
compile(){
	crystal build code.code
}
run(){
	xargs -a args.args -d '\n' ./code < stdin.stdin
}