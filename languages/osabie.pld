name="osabie"
aliases=("osabie" "05AB1E" "osable" "usable")
requires=("elixir")

version(){
	echo '1.0.0' | grep -Po '\d+.\d+.\d+'
}
install(){
	git clone https://github.com/Adriandmen/05AB1E.git
	cd 05AB1E
	mix local.hex --force
	mix deps.get --force
	MIX_ENV=prod mix escript.build --force
}
pre_uninstall(){}
post_uninstall(){}
path(){
	echo "$LBIN/05AB1E"
}
compile(){}
run(){
	export LC_ALL="en_US.UTF-8"
	osabie code.code < args.args
}